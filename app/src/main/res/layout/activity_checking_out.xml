<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/form_background_bg"
    tools:context=".CheckingOutActivity">

    <TextView
        android:id="@+id/checkTitle"
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FADECB"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="customer information"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/form_button_bg"
        android:fontFamily="sans-serif-medium"
        android:onClick="submitPressed"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_weight="0.3"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/firstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="9"
                android:fontFamily="sans-serif-medium"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fullNameCI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="9"
                android:fontFamily="sans-serif-medium"
                android:hint="Username"
                android:inputType="textPersonName"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/userNameCI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/streetAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="9"
                android:fontFamily="sans-serif-medium"
                android:hint="Street Address"
                android:inputType="textShortMessage|textAutoCorrect"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/streetAddressCI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:hint="Street Address"
                android:inputType="textShortMessage|textAutoCorrect"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/postalCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="9"
                android:fontFamily="sans-serif-medium"
                android:hint="Postal Code"
                android:inputType="textPostalAddress"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/postalCodeCI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:hint="Postal Code"
                android:inputType="textPostalAddress"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="9"
                android:fontFamily="sans-serif-medium"
                android:hint="Telephone number"
                android:inputType="phone"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/phoneNumberCI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:inputType="phone"
                android:textSize="18sp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/creditCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="9"
                android:fontFamily="sans-serif-medium"
                android:hint="Credit Card Number"
                android:inputType="number"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/creditCardCI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:hint="Credit Card Number"
                android:inputType="number"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cardType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="9"
                android:fontFamily="sans-serif-medium"
                android:hint="Card Type"
                android:inputType="textPersonName"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/cardTypeCI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:hint="Card Type"
                android:inputType="textPersonName"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/expiryDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="9"
                android:fontFamily="sans-serif-medium"
                android:hint="Expiry Date"
                android:inputType="date"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/expiryDateCI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:hint="Expiry Date"
                android:inputType="date"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="9"
                android:fontFamily="sans-serif-medium"
                android:hint="Price"
                android:inputType="date"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/priceCI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:inputType="date"
                android:textStyle="italic" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>